{variant === 'compact' && (
  <section class="newsletter-cta newsletter-cta--compact" data-testid={testId}>
    <div class="newsletter-cta__row">
      <div class="newsletter-cta__text">
        <span class="newsletter-cta__compact-icon">ðŸ“¬</span>
        <span class="newsletter-cta__compact-title">
          Recibe las mejores noticias K-Drama y K-Pop en tu correo
        </span>
      </div>
      <div class="newsletter-cta__compact-form">
