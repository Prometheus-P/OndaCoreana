---
/**
 * NewsletterCTA Component
 * Prominent newsletter subscription call-to-action
 * Increases newsletter visibility and conversion
 */

import NewsletterForm from '../newsletter/NewsletterForm.astro';

interface Props {
  /** Display variant */
  variant?: 'inline' | 'floating' | 'compact';
  /** Test ID for testing */
  testId?: string;
}

const { variant = 'inline', testId } = Astro.props;

const benefits = [
  'Estrenos de la semana',
  'Comebacks exclusivos',
  'Recomendaciones personalizadas',
];
---

