---
/**
 * ThisWeekSection Component
 * Displays currently airing dramas and recent K-Pop comebacks
 * Key feature for "What should I watch now?" consumer demand
 */

import type { CollectionEntry } from 'astro:content';
import { getAiringScheduleText } from '../../config/platforms';

interface Props {
  /** Currently airing dramas */
  airingDramas: CollectionEntry<'dramas'>[];
  /** Recent comeback artists */
  recentComebacks: CollectionEntry<'kpop'>[];
  /** Maximum items to display (default: 4) */
  limit?: number;
  /** Test ID for testing */
  testId?: string;
}

const { airingDramas, recentComebacks, limit = 4, testId } = Astro.props;

// Combine and limit items
const displayDramas = airingDramas.slice(0, Math.ceil(limit / 2));
const displayComebacks = recentComebacks.slice(0, Math.floor(limit / 2));

// Helper to format relative time
function getRelativeTime(date: Date): string {
  const now = new Date();
  const diffDays = Math.floor((now.getTime() - date.getTime()) / (1000 * 60 * 60 * 24));

  if (diffDays === 0) return 'Hoy';
  if (diffDays === 1) return 'Ayer';
  if (diffDays < 7) return `Hace ${diffDays} días`;
  if (diffDays < 14) return 'Hace 1 semana';
  return `Hace ${Math.floor(diffDays / 7)} semanas`;
}
---

<section class="this-week-section" data-testid={testId}>
  <div class="this-week-header">
    <div class="this-week-title-group">
      <h2 class="this-week-title">Esta Semana</h2>
      <p class="this-week-subtitle">Lo que está pasando ahora en el mundo coreano</p>
    </div>
    <a href="/noticias" class="this-week-cta">
      Ver todo
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6" />
      </svg>
    </a>
  </div>

  <div class="this-week-grid">
    {displayDramas.map((drama) => (
      <a href={`/dramas/${drama.slug}`} class="this-week-card this-week-card--drama">
        <div class="this-week-card__image">
          {drama.data.heroImage ? (
            <img
              src={drama.data.heroImage}
              alt={drama.data.heroImageAlt || drama.data.dramaTitle}
              loading="lazy"
            />
          ) : (
            <div class="this-week-card__placeholder">
              {drama.data.dramaTitle.charAt(0)}
            </div>
          )}
          <span class="this-week-badge this-week-badge--live">
            <span class="this-week-badge__dot" />
            EN VIVO
          </span>
        </div>
        <div class="this-week-card__content">
          <h3 class="this-week-card__title">{drama.data.dramaTitle}</h3>
          <p class="this-week-card__meta">
            {drama.data.airingDay && (
              <span>{getAiringScheduleText(drama.data.airingDay)}</span>
            )}
            {drama.data.network && (
              <span class="this-week-card__network">{drama.data.network}</span>
            )}
          </p>
        </div>
      </a>
    ))}

    {displayComebacks.map((artist) => (
      <a href={`/kpop/${artist.slug}`} class="this-week-card this-week-card--comeback">
        <div class="this-week-card__image">
          {artist.data.heroImage ? (
            <img
              src={artist.data.heroImage}
              alt={artist.data.heroImageAlt || artist.data.artistName}
              loading="lazy"
            />
          ) : (
            <div class="this-week-card__placeholder this-week-card__placeholder--kpop">
              {artist.data.artistName.charAt(0)}
            </div>
          )}
          <span class="this-week-badge this-week-badge--comeback">
            COMEBACK
          </span>
        </div>
        <div class="this-week-card__content">
          <h3 class="this-week-card__title">{artist.data.artistName}</h3>
          <p class="this-week-card__meta">
            {artist.data.lastComebackDate && (
              <span>{getRelativeTime(artist.data.lastComebackDate)}</span>
            )}
            {artist.data.agency && (
              <span class="this-week-card__agency">{artist.data.agency}</span>
            )}
          </p>
        </div>
      </a>
    ))}
  </div>

  {displayDramas.length === 0 && displayComebacks.length === 0 && (
    <p class="this-week-empty">
      No hay contenido en tendencia esta semana. ¡Vuelve pronto!
    </p>
  )}
</section>

<style>
  .this-week-section {
    padding: 0;
  }

  .this-week-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .this-week-title-group {
    flex: 1;
  }

  .this-week-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--md-color-on-surface);
    margin: 0;
  }

  .this-week-subtitle {
    font-size: 0.875rem;
    color: var(--md-color-on-surface-variant);
    margin: 0.25rem 0 0;
  }

  .this-week-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--md-color-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .this-week-cta:hover {
    color: var(--md-color-on-primary-container);
  }

  .this-week-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .this-week-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .this-week-card {
    display: flex;
    flex-direction: column;
    background: var(--md-color-surface);
    border: 1px solid var(--md-color-outline-variant);
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .this-week-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--md-elevation-2);
    border-color: var(--md-color-primary);
  }

  .this-week-card__image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .this-week-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .this-week-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--md-color-primary) 0%, var(--md-color-tertiary) 100%);
    color: var(--md-color-on-primary);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .this-week-card__placeholder--kpop {
    background: linear-gradient(135deg, var(--md-color-tertiary) 0%, var(--md-color-primary) 100%);
  }

  .this-week-badge {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .this-week-badge--live {
    background: #E53935;
    color: white;
  }

  .this-week-badge__dot {
    width: 6px;
    height: 6px;
    background: white;
    border-radius: 50%;
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .this-week-badge--comeback {
    background: #7C3AED;
    color: white;
  }

  .this-week-card__content {
    padding: 0.75rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .this-week-card__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--md-color-on-surface);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .this-week-card__meta {
    font-size: 0.75rem;
    color: var(--md-color-on-surface-variant);
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .this-week-card__network,
  .this-week-card__agency {
    opacity: 0.8;
  }

  .this-week-card__network::before,
  .this-week-card__agency::before {
    content: '·';
    margin-right: 0.25rem;
  }

  .this-week-empty {
    text-align: center;
    color: var(--md-color-on-surface-variant);
    padding: 2rem;
  }
</style>
