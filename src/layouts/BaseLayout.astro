---
import '../styles/global.css';
import '../styles/theme.css';
import SEOHead from '../components/seo/SEOHead.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import SearchInput from '../components/search/SearchInput.astro';
import ThemeToggle from '../components/ui/ThemeToggle.astro';
import Logo from '../components/brand/Logo.astro';
import { primaryNav, footerLinks, socialLinks } from '../config/site';

interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string;
  type?: 'website' | 'article';
  publishedTime?: Date;
  modifiedTime?: Date;
  author?: string;
  canonical?: string;
  noindex?: boolean;
  showSearch?: boolean;
}

const props = Astro.props;
const { showSearch = true } = props;

// Prevent duplicate search UIs on pages that embed their own search experience
const hideSearchForRoute = Astro.url.pathname === '/buscar';
const shouldRenderSearch = showSearch && !hideSearchForRoute;

// GA4 Measurement ID from environment variable
const gaMeasurementId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;
// Google AdSense configuration
const adsenseEnabled = import.meta.env.PUBLIC_ADSENSE_ENABLED === 'true';
const adsenseClientId = import.meta.env.PUBLIC_ADSENSE_CLIENT_ID;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/brand/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <script is:inline>
      const storageKey = 'ondacoreana-theme';
      const root = document.documentElement;
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)');
      const storedTheme = localStorage.getItem(storageKey);
      const initialTheme = storedTheme === 'light' || storedTheme === 'dark'
        ? storedTheme
        : prefersDark.matches
          ? 'dark'
          : 'light';

      root.classList.toggle('dark', initialTheme === 'dark');
      root.dataset.theme = initialTheme;

      prefersDark.addEventListener('change', (event) => {
        if (!localStorage.getItem(storageKey)) {
          const nextTheme = event.matches ? 'dark' : 'light';
          root.classList.toggle('dark', nextTheme === 'dark');
          root.dataset.theme = nextTheme;
        }
      });
    </script>

    <SEOHead {...props} />

    <JsonLd
      schema={[
        { type: 'WebSite' },
        { type: 'Organization' },
      ]}
    />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <slot name="head" />

    {/* Google Analytics 4 */}
    {gaMeasurementId && (
      <>
        <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${gaMeasurementId}`}></script>
        <script is:inline define:vars={{ gaMeasurementId }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaMeasurementId);
        </script>
      </>
    )}

    {/* Google AdSense - only load when enabled and client ID exists */}
    {adsenseEnabled && adsenseClientId && (
      <script
        is:inline
        async
        src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClientId}`}
        crossorigin="anonymous"
      ></script>
    )}
  </head>
  <body class="min-h-screen bg-[color:var(--oc-bg)] text-[color:var(--oc-text)] antialiased transition-colors">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50"
      style="background-color: var(--md-color-primary); color: var(--md-color-on-primary); padding: var(--md-spacing-sm) var(--md-spacing-lg); border-radius: var(--md-shape-sm); box-shadow: var(--md-elevation-2);"
    >
      Saltar al contenido principal
    </a>

    <header
      class="sticky top-0 z-40 w-full border-b"
      style="border-color: color-mix(in srgb, var(--md-color-outline-variant) 70%, transparent); background: color-mix(in srgb, var(--md-color-surface) 88%, transparent); backdrop-filter: blur(18px);"
      data-pagefind-ignore="all"
    >
      <nav
        class="mx-auto flex max-w-7xl flex-wrap items-center gap-4"
        style="padding: var(--md-spacing-md) var(--md-spacing-md);"
      >
        <a href="/" class="order-1 flex items-center gap-3" aria-label="Inicio OndaCoreana">
          <Logo variant="horizontal" height={36} class="hidden sm:block" />
          <Logo variant="icon" height={40} class="sm:hidden" />
        </a>

        <ul class="order-4 hidden items-center md:order-2 md:flex" style="gap: var(--md-spacing-lg);">
          {primaryNav.map((item) => (
            <li>
              <a href={item.href} class="nav-link">
                {item.label}
              </a>
            </li>
          ))}
        </ul>

        <div class="order-3 ml-auto flex items-center gap-3">
          {/* Desktop search - shown at md+ for tablet accessibility */}
          {shouldRenderSearch && (
            <div class="hidden w-48 md:block lg:w-64">
              <SearchInput placeholder="Buscar..." size="sm" />
            </div>
          )}

          <div class="hidden md:block">
            <ThemeToggle />
          </div>

          <div class="flex items-center gap-2 md:hidden">
            <ThemeToggle size="sm" />

            {/* Mobile menu button */}
            <button
              type="button"
              class="rounded-md p-2"
              style="color: var(--md-color-on-surface); border: 1px solid color-mix(in srgb, var(--md-color-outline) 70%, transparent);"
              aria-label="Abrir menú"
              aria-expanded="false"
              id="mobile-menu-button"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </nav>

      <!-- Mobile menu -->
      <div class="hidden border-t lg:hidden" id="mobile-menu" style="border-color: color-mix(in srgb, var(--md-color-outline-variant) 70%, transparent); background-color: var(--md-color-surface);">
        {/* Mobile search */}
        {shouldRenderSearch && (
          <div class="px-4 pb-4">
            <SearchInput placeholder="Buscar..." size="md" />
          </div>
        )}
        <div class="flex items-center justify-between px-4 pb-4">
          <p class="text-sm font-medium" style="color: var(--md-color-on-surface-variant);">Tema</p>
          <ThemeToggle size="sm" />
        </div>
        <ul class="space-y-1 px-4 pb-4">
          {primaryNav.map((item) => (
            <li>
              <a href={item.href} class="block py-2 nav-link">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </header>

    <main id="main-content" class="flex-1">
      <slot />
    </main>

    <footer class="border-t" style="border-color: color-mix(in srgb, var(--md-color-outline-variant) 70%, transparent); background-color: var(--md-color-surface-container-low);" data-pagefind-ignore="all">
      <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
          <div class="space-y-3">
            <Logo variant="horizontal" height={32} />
            <p class="text-sm subtle-text">
              Tu fuente de información sobre K-Dramas, K-Pop y cultura coreana en español.
            </p>
          </div>

          <div>
            <h4 class="font-semibold" style="color: var(--md-color-on-surface);">Contenido</h4>
            <ul class="mt-2 space-y-2 text-sm">
              {primaryNav.map((item) => (
                <li><a href={item.href} class="nav-link">{item.label}</a></li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="font-semibold" style="color: var(--md-color-on-surface);">Legal</h4>
            <ul class="mt-2 space-y-2 text-sm">
              {footerLinks.map((link) => (
                <li><a href={link.href} class="nav-link">{link.label}</a></li>
              ))}
            </ul>
          </div>

          <div>
            <h4 class="font-semibold" style="color: var(--md-color-on-surface);">Síguenos</h4>
            <div class="mt-2 flex gap-4">
              {socialLinks.map((link) => (
                <a href={link.href} target="_blank" rel="noopener noreferrer" class="nav-link" aria-label={link.label}>
                  {link.platform === 'twitter' && (
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  {link.platform === 'instagram' && (
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
                    </svg>
                  )}
                </a>
              ))}
            </div>
          </div>
        </div>

        <div class="mt-8 border-t pt-8 text-center text-sm" style="border-color: var(--md-color-outline-variant); color: var(--md-color-on-surface-variant);">
          <p>&copy; {new Date().getFullYear()} OndaCoreana. Todos los derechos reservados.</p>
        </div>
      </div>
    </footer>

    <script>
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      // Focus trap for accessibility
      function trapFocus(e: KeyboardEvent) {
        if (!mobileMenu || mobileMenu.classList.contains('hidden')) return;

        const focusableElements = mobileMenu.querySelectorAll<HTMLElement>(
          'a[href], button, input, textarea, select, [tabindex]:not([tabindex="-1"])'
        );
        const firstElement = focusableElements[0];
        const lastElement = focusableElements[focusableElements.length - 1];

        if (e.key === 'Tab') {
          if (e.shiftKey && document.activeElement === firstElement) {
            e.preventDefault();
            lastElement?.focus();
          } else if (!e.shiftKey && document.activeElement === lastElement) {
            e.preventDefault();
            firstElement?.focus();
          }
        }

        // Close menu on Escape
        if (e.key === 'Escape') {
          mobileMenu.classList.add('hidden');
          menuButton?.setAttribute('aria-expanded', 'false');
          menuButton?.focus();
        }
      }

      menuButton?.addEventListener('click', () => {
        const menuIsHidden = mobileMenu?.classList.toggle('hidden');
        const expanded = !(menuIsHidden ?? true);
        menuButton?.setAttribute('aria-expanded', expanded ? 'true' : 'false');

        // Focus first link when menu opens
        if (expanded) {
          const firstLink = mobileMenu?.querySelector<HTMLElement>('a[href]');
          setTimeout(() => firstLink?.focus(), 100);
        }
      });

      document.addEventListener('keydown', trapFocus);
    </script>

    {/* Outbound link tracking - lightweight, non-blocking */}
    <script is:inline>
      (function() {
        document.addEventListener('click', function(e) {
          const link = e.target.closest('a[data-outbound="true"]');
          if (!link) return;

          const url = link.href;
          const affiliateHint = link.dataset.affiliate || 'unknown';

          // Track with GA4 if available
          if (typeof gtag === 'function') {
            gtag('event', 'outbound_click', {
              event_category: 'affiliate',
              event_label: affiliateHint,
              link_url: url,
              transport_type: 'beacon'
            });
          }

          // Dispatch custom event for other listeners
          window.dispatchEvent(new CustomEvent('oc:outbound', {
            detail: { url, hint: affiliateHint }
          }));
        });
      })();
    </script>
  </body>
</html>
