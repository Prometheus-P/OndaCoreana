---
import BaseLayout from './BaseLayout.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import ShareButtons from '../components/ui/ShareButtons.astro';
import AdSlot from '../components/ads/AdSlot.astro';
import AffiliateBox from '../components/affiliate/AffiliateBox.astro';
import FAQSection from '../components/ui/FAQSection.astro';
import { buildEntryUrl, type ArticleEntry } from '../lib/related';

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  heroImageAlt?: string;
  author?: string;
  tags?: string[];
  keywords?: string[];
  breadcrumbs?: Array<{ name: string; url: string }>;
  contentType?: 'dramas' | 'kpop' | 'noticias' | 'guias';
  /** Affiliate hint from frontmatter */
  affiliateHint?: 'kpop_goods' | 'esim' | 'travel_insurance' | 'streaming' | 'korean_learning';
  /** Disable ads on this article */
  noAds?: boolean;
  /** Related content items */
  relatedItems?: ArticleEntry[];
  /** FAQ items for AEO optimization */
  faq?: FAQItem[];
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroImageAlt = title,
  author = 'OndaCoreana',
  tags = [],
  keywords = [],
  breadcrumbs = [],
  contentType,
  affiliateHint,
  noAds = false,
  relatedItems = [],
  faq = [],
} = Astro.props;

const language = 'es-419';
const keywordList = [...new Set([...tags, ...keywords])];

// Auto-determine affiliate hint based on content type if not explicitly set
const categoryAffiliateMap: Record<string, string> = {
  kpop: 'kpop_goods',
  dramas: 'streaming',
  guias: 'esim',
  noticias: '', // No default for news
};
const effectiveAffiliateHint = affiliateHint || (contentType ? categoryAffiliateMap[contentType] : '');

// Show ads unless explicitly disabled
const showAds = !noAds;

const contentTypeLabels: Record<string, string> = {
  dramas: 'K-Drama',
  kpop: 'K-Pop',
  noticias: 'Noticia',
  guias: 'Guía',
};

const formattedPubDate = pubDate.toLocaleDateString(language, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString(language, {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

---

<BaseLayout
  title={title}
  description={description}
  image={heroImage}
  imageAlt={heroImageAlt}
  type="article"
  publishedTime={pubDate}
  modifiedTime={updatedDate}
  author={author}
>
  <Fragment slot="head">
    <JsonLd
      schema={[
        {
          type: 'Article',
          headline: title,
          description,
          image: heroImage,
          datePublished: pubDate,
          dateModified: updatedDate,
          author,
          url: Astro.url.href,
          keywords: keywordList,
          articleSection: contentType,
          inLanguage: language,
        },
        {
          type: 'BreadcrumbList',
          items: [
            { name: 'Inicio', url: '/' },
            ...breadcrumbs,
            { name: title, url: Astro.url.pathname },
          ],
        },
        ...(faq.length > 0 ? [{
          type: 'FAQPage' as const,
          questions: faq,
        }] : []),
      ]}
    />

    <meta data-pagefind-meta="title" content={title} />
    <meta data-pagefind-meta="description" content={description} />
    <meta data-pagefind-meta="pubDate" content={pubDate.toISOString()} />
    {updatedDate && <meta data-pagefind-meta="updatedDate" content={updatedDate.toISOString()} />}
    <meta data-pagefind-meta="author" content={author} />
    {contentType && (
      <meta data-pagefind-meta="contentType" data-pagefind-filter="contentType" content={contentType} />
    )}
    {heroImage && <meta data-pagefind-meta="heroImage" content={heroImage} />}
    {heroImageAlt && <meta data-pagefind-meta="heroImageAlt" content={heroImageAlt} />}
    {tags.length > 0 && <meta data-pagefind-meta="tags" content={tags.join(', ')} />}
    {keywordList.length > 0 && <meta name="keywords" content={keywordList.join(', ')} />}
    {keywordList.length > 0 && <meta data-pagefind-meta="keywords" content={keywordList.join(', ')} />}
  </Fragment>

  <article class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8" style="padding-top: var(--md-sys-spacing-3xl); padding-bottom: var(--md-sys-spacing-3xl);" data-pagefind-body>
    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav aria-label="Breadcrumb" style="margin-bottom: var(--md-sys-spacing-lg);">
        <ol class="flex flex-wrap items-center text-sm" style="gap: var(--md-sys-spacing-sm); color: var(--md-sys-color-on-surface-variant);">
          <li>
            <a href="/">Inicio</a>
          </li>
          {breadcrumbs.map((crumb) => (
            <li class="flex items-center" style="gap: var(--md-sys-spacing-sm);">
              <span>/</span>
              <a href={crumb.url}>{crumb.name}</a>
            </li>
          ))}
          <li class="flex items-center" style="gap: var(--md-sys-spacing-sm);">
            <span>/</span>
            <span style="opacity: 0.6;" aria-current="page">{title}</span>
          </li>
        </ol>
      </nav>
    )}

    <!-- Header -->
    <header style="margin-bottom: var(--md-sys-spacing-2xl);">
      <h1 class="text-3xl font-bold sm:text-4xl lg:text-5xl" style="color: var(--md-sys-color-on-surface);" data-pagefind-meta="title">
        {title}
      </h1>

      <div class="flex flex-wrap items-center text-sm" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-md); color: var(--md-sys-color-on-surface-variant);">
        <span>Por {author}</span>
        <span>•</span>
        <time datetime={pubDate.toISOString()}>{formattedPubDate}</time>
        {updatedDate && (
          <>
            <span>•</span>
            <span>Actualizado: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time></span>
          </>
        )}
      </div>

      <!-- Share Buttons -->
      <div style="margin-top: var(--md-sys-spacing-md);">
        <ShareButtons
          title={title}
          url={`https://ondacoreana.com${Astro.url.pathname}`}
          description={description}
        />
      </div>

      {tags.length > 0 && (
        <div class="flex flex-wrap" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-sm);">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag.toLowerCase()}`}
              class="inline-flex items-center text-sm font-medium transition-colors hover:text-[color:var(--oc-primary)] hover:bg-[color:var(--oc-primary-soft)]"
              style="border-radius: var(--md-sys-shape-corner-full); background-color: var(--md-sys-color-primary-container); color: var(--md-sys-color-on-primary-container); padding: var(--md-sys-spacing-xs) var(--md-sys-spacing-md);"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Hero Image -->
    {heroImage && (
      <figure style="margin-bottom: var(--md-sys-spacing-2xl);">
        <img
          src={heroImage}
          alt={heroImageAlt}
          class="w-full object-cover"
          style="border-radius: var(--md-sys-shape-corner-large); box-shadow: var(--md-sys-elevation-level2);"
          loading="eager"
          decoding="async"
        />
      </figure>
    )}

    <!-- Ad: Top of article -->
    {showAds && (
      <AdSlot slot="article-top" format="in-article" testId="ad-article-top" />
    )}

    <!-- Content -->
    <div class="prose prose-lg prose-pink mx-auto max-w-none" style="color: var(--md-sys-color-on-surface);">
      <slot />
    </div>

    <!-- Ad: After content -->
    {showAds && (
      <AdSlot slot="article-bottom" format="in-article" testId="ad-article-bottom" />
    )}

    <!-- Affiliate Box: Auto-inserted based on content type or frontmatter hint -->
    {effectiveAffiliateHint && (
      <AffiliateBox hint={effectiveAffiliateHint} testId="affiliate-box" />
    )}

    <!-- FAQ Section: For AEO optimization -->
    {faq.length > 0 && (
      <FAQSection questions={faq} testId="faq-section" />
    )}

    <!-- Tags footer -->
    {tags.length > 0 && (
      <footer class="border-t" style="margin-top: var(--md-sys-spacing-3xl); border-color: var(--md-sys-color-outline-variant); padding-top: var(--md-sys-spacing-2xl);">
        <h2 class="text-lg font-semibold" style="color: var(--md-sys-color-on-surface);">Etiquetas</h2>
        <div class="flex flex-wrap" style="margin-top: var(--md-sys-spacing-md); gap: var(--md-sys-spacing-sm);">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag.toLowerCase()}`}
              class="inline-flex items-center text-sm font-medium transition-colors hover:bg-[color:var(--oc-primary-soft)] hover:text-[color:var(--oc-primary)]"
              style="border-radius: var(--md-sys-shape-corner-full); background-color: var(--md-sys-color-surface-variant); color: var(--md-sys-color-on-surface-variant); padding: var(--md-sys-spacing-sm) var(--md-sys-spacing-md);"
            >
              #{tag}
            </a>
          ))}
        </div>
      </footer>
    )}

    {relatedItems.length > 0 && (
      <section class="mt-14">
        <div class="flex flex-wrap items-baseline justify-between gap-3">
          <h2 class="text-2xl font-semibold" style="color: var(--md-sys-color-on-surface);">Relacionado</h2>
          <p class="text-sm" style="color: var(--md-sys-color-on-surface-variant);">Explora más artículos recomendados</p>
        </div>

        <div class="mt-6 grid gap-6 md:grid-cols-2">
          {relatedItems.map((item) => (
            <a
              href={buildEntryUrl(item)}
              class="group flex gap-4 rounded-2xl border p-4 transition duration-200"
              style="border-color: var(--md-sys-color-outline-variant); background-color: color-mix(in srgb, var(--md-sys-color-surface-variant) 25%, transparent);"
            >
              {item.data.heroImage && (
                <img
                  src={item.data.heroImage}
                  alt=""
                  class="hidden h-24 w-24 flex-shrink-0 rounded-xl object-cover sm:block"
                  loading="lazy"
                  decoding="async"
                />
              )}
              <div class="min-w-0 flex-1 space-y-2">
                <div class="flex items-center gap-2">
                  <span
                    class="chip"
                    style="--chip-bg: color-mix(in srgb, var(--md-sys-color-primary) 12%, var(--md-sys-color-surface-variant)); --chip-color: var(--md-sys-color-on-surface);"
                  >
                    {contentTypeLabels[item.collection] || 'Artículo'}
                  </span>
                  <time class="text-xs" style="color: var(--md-sys-color-on-surface-variant);" datetime={item.data.pubDate.toISOString()}>
                    {item.data.pubDate.toLocaleDateString(language, { year: 'numeric', month: 'short', day: 'numeric' })}
                  </time>
                </div>

                <h3 class="text-lg font-semibold leading-tight line-clamp-2" style="color: var(--md-sys-color-on-surface);">
                  {item.data.title}
                </h3>
                <p class="text-sm line-clamp-2" style="color: var(--md-sys-color-on-surface-variant);">
                  {item.data.description}
                </p>
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>
